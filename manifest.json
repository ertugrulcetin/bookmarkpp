{
  "manifest_version": 3,
  "name": "BookmarkPp",
  "version": "1.0.0",
  "description": "A local-first bookmark manager like Pocket, with optional cloud sync",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "tabs",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "BookmarkPp - Save this page"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 